{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
